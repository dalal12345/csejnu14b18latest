doctype html
html
    head(lang="en")
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='Some description')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/assets/css/client/update_me.css')
        title Update me


        link(rel='stylesheet', href='/assets/css/client/general-navbar.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")




    body
        //include general_navbar
        div(class="container")

            each mcg in getFlashMessages("user_found")
                    h3=mcg
            h1   #{singleStudentFinal.studentName}, Update your data
            form(
                action='/update_me_x'
                method="POST"
                class="formCard"
                enctype="multipart/form-data"
            )
                label(class="form-label")   Student name :
                input(
                        type='text'
                        value=`${singleStudentFinal.studentName}`
                        name="studentName"
                        class="form-control"
                    )

                label(class="form-label")  You have left :
                input(
                        type='button'
                        value=`${singleStudentFinal.leftUpdateTimes}`
                        name="leftUpdateTimes"
                    class="btn btn-warning"
                    )
                br
                label(class="form-label")   Student Email :
                input(
                        type='text'
                        value=`${singleStudentFinal.studentEmail}`
                        name="studentEmail"
                    class="form-control"
                    )

                label(class="form-label")   Dont update this key :
                input(type="password" value=`${singleStudentFinal.studentSecretKey}` name="studentSecretKey" class="form-control")

                label(class="form-label") Enter Your home town :
                input(type="text"  name="studentHomeTown" value=`${singleStudentFinal.studentHomeTown}` class="form-control")

                label(class="form-label") Enter Your College name :
                input(type="text"  name="studentCollegeName" value=`${singleStudentFinal.studentCollegeName}` class="form-control")

                label(class="form-label") Enter Your School name :
                input(type="text"  name="studentSchoolName" value=`${singleStudentFinal.studentSchoolName}` class="form-control")

                label(class="form-label") Your favourite quote :
                input(type="text"  name="favouriteQuote" value=`${singleStudentFinal.favouriteQuote}` class="form-control")

                label(class="form-label") Enter your fb id :
                input(type="text"  name="fbId" value=`${singleStudentFinal.fbId}` class="form-control")

                //label Your image :
                br

                input(type="file"  name="studentPhoto" class="filePicker form-control" )

                br


                label(class="form-label")   Guardian Number (+880):
                input(
                        type='number'
                        value=`${singleStudentFinal.studentGuardianNumber}`
                        name="studentGuardianNumber"
                          class="form-control"
                    )

                label   Blood Group:
                select(name="studentBloodGroup" class="form-select")
                    option(value="O-" selected) O-
                    option(value="O+") O+
                    option(value="AB+") AB+
                    option(value="B+") B+
                    option(value="A-") A-
                    option(value="A+") A+
                    option(value="AB-") AB-
                    option(value="B-") B-
                    option(value="BloodOfCow") CowBlood
                br


                if singleStudentFinal.leftUpdateTimes
                    button(type=submit,class="btn mt-3 btn-primary btnUpdate") Update me
                    br
                    br
                else
                    button(type=submit,disabled,class="mt-3 btn btn-danger btnUpdate") You can no longer update
                    br
                    br


        script(src="/assets/js/user/update_me.js")