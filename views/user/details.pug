    body
        div
            //include navbar
            a(
            href="/"
            )
                img(
            src="/assets/images/home.png"
            class="homeImage"
            
            )
            if singleStudentDetails
                          div(class="studentDetailsBox")
                                    if singleStudentDetails.studentPhoto
                                                     img(src=`/uploads/${singleStudentDetails.studentPhoto}` class="detailsPhoto")
                                    else
                                                      img(src=`/users/default.png` class="detailsPhoto")
                                    if singleStudentDetails.studentName
                                                     p(class="detailsBtn") #{singleStudentDetails["studentName"]}
                                    if singleStudentDetails.studentEmail
                                                     p(class="detailsBtn") #{singleStudentDetails["studentEmail"]}
                                    if singleStudentDetails.studentCollegeName
                                                     p(class="detailsBtn") #{singleStudentDetails["studentCollegeName"]}
                                    if singleStudentDetails.studentSchoolName
                                                     p(class="detailsBtn") #{singleStudentDetails["studentSchoolName"]}
                                    if singleStudentDetails.studentHomeTown
                                                     p(class="detailsBtn") #{singleStudentDetails["studentHomeTown"]}
                                    if singleStudentDetails.favouriteQuote
                                                     p(class="detailsBtn") #{singleStudentDetails["favouriteQuote"]}
                                    if singleStudentDetails.fbId
                                                     p(class="detailsBtn") #{singleStudentDetails["fbId"]}
                                    if singleStudentDetails.studentGuardianNumber
                                                     p(class="detailsBtn") 0#{singleStudentDetails["studentGuardianNumber"]}
                                    if singleStudentDetails.studentBloodGroup
                                                     p(class="detailsBtn") #{singleStudentDetails["studentBloodGroup"]}



                          script(src="/assets/js/user/details.js")
            else
                h1  There is no such user...