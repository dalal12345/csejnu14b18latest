doctype html
html
    head(lang="en")
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='Some description')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Add Me
        link(rel='stylesheet', href='/assets/css/client/update_me.css')
        link(rel='stylesheet', href='/assets/css/client/general-navbar.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")

    body
        //include general_navbar
        div(class="container")

            h1  Hey #{singleStudentInitial.studentName}, add your data :
            form(
                action='/update_me'
                method="POST"
                class="formCard"
                enctype="multipart/form-data"

                )
                label(class="form-label")   Student name:
                input(
                        type='text'
                        value=`${singleStudentInitial.studentName}`
                        name="studentName"
                    class="form-control"
                    )

                label(class="form-label")   Student Email:
                input(
                        type='text'
                value=`${singleStudentInitial.studentEmail}`
                        name="studentEmail"
                    class="form-control"
                    )
                b
                label(class="form-label") Copy this key for future update :
                input(
                    type="text"
                    value=`${singleStudentInitial.studentSecretKey}`
                    name="studentSecretKey"
                    class="form-control"
                    )

                label(class="form-label") Enter Your home town :
                input(type=text  name="studentHomeTown" class="form-control")

                label(class="form-label") Enter Your College name :
                input(type=text  name="studentCollegeName" class="form-control")

                label(class="form-label") Enter Your School name :
                input(type=text  name="studentSchoolName" class="form-control")

                label(class="form-label") Your favourite quote :
                input(type=text  name="favouriteQuote" class="form-control")

                label(class="form-label") Enter your fb id :
                input(type=text  name="fbId" class="form-control")
                br
                br
                label Your image :
                input(type='file'  name="studentPhoto" class="form-control")
                br
                br
                label(class="form-label")   Guardian Number:
                input(
                        type='number'
                        name="studentGuardianNumber"
                    class="form-control"
                    )
                br
                br
                label(class="form-label")   Blood Group:
                select(name="studentBloodGroup" class="form-select")
                        option(value="A+") A+
                        option(value="O+") O+
                        option(value="AB+") AB+
                        option(value="B+") B+
                        option(value="A-") A-
                        option(value="O-") O-
                        option(value="AB-") AB-
                        option(value="B-") B-
                        option(value="BloodOfCow") CowBlood

                br
                br
                button(type='submit' class="btnAdd btn btn-primary") Add Me
                br
                br

